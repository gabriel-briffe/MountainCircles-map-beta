{
    "sources": {
      "main-geojson-source": {
        "type": "geojson",
        "data": "https://raw.githubusercontent.com/gabriel-briffe/MountainCircles-map-beta/main/seeyou/testseeyou.geojson"
      }
    },
    "layers": [
      {
        "id": "linestrings-layer",
        "type": "line",
        "source": "main-geojson-source",
        "filter": ["==", "$type", "LineString"],
        "paint": {
          "line-color": "#000",
          "line-width": ["step", ["zoom"], 1, 10, 2]
        }
      },
      {
        "id": "points-layer",
        "type": "circle",
        "source": "main-geojson-source",
        "filter": ["==", "$type", "Point"],
        "paint": {
          "circle-radius": 10,
          "circle-color": "#ff0000",
          "circle-stroke-width": 2,
          "circle-stroke-color": "#fff"
        }
      },
      {
        "id": "linestrings-labels",
        "type": "symbol",
        "source": "main-geojson-source",
        "minzoom": 8,
        "filter": ["==", "$type", "LineString"],
        "layout": {
          "text-field": "{ELEV}",
          "symbol-placement": "line",
          "text-rotation-alignment": "auto",
          "text-keep-upright": true,
          "text-size": 14,
          "text-allow-overlap": false,
          "text-ignore-placement": false,
          "text-offset": [0, 0],
          "symbol-spacing": 250
        },
        "paint": {
          "text-color": "#000",
          "text-halo-color": "#fff",
          "text-halo-width": 2
        }
      },
      {
        "id": "points-labels",
        "type": "symbol",
        "source": "main-geojson-source",
        "minzoom": 7,
        "filter": ["==", "$type", "Point"],
        "layout": {
          "text-field": "{name}",
          "text-size": 19,
          "text-allow-overlap": false,
          "text-ignore-placement": false,
          "text-offset": [0.8, 0.8],
          "text-variable-anchor": ["top", "bottom", "left", "right"],
          "text-radial-offset": 0.8,
          "symbol-spacing": 20
        },
        "paint": {
          "text-color": "#000",
          "text-halo-color": "#fff",
          "text-halo-width": 2
        }
      }
    ]
  }